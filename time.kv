<DisplayTime>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size: self.size
        Image:
            source: "images/cool.jpg"
            size_hint: 2, 2
            # pos: 1, 5
            # allow_stretch: True

        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .25
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 3
                    points: (int(self.center_x - dp(250)), int(self.center_y - dp(55)), int(self.center_x + dp(250)), int(self.center_y - dp(55)))
                #Color:
                    #rgba: 1, 1, 1, 1
                # Line:
                    # width: 3
                    # points: (int(self.center_x - dp(250)), int(self.center_y - dp(55)), int(self.center_x + dp(250)), int(self.center_y - dp(55)))


            text: root.my_time if app.display_on_off == True else ""
            font_name: "fonts/Rubik-Medium.ttf"
            color: utils.get_color_from_hex("#e6e6e6")
            # outline_width: 1
            # outline_color: utils.get_color_from_hex("#000000")
            font_size: dp(100)

    FloatLayout:
        Button:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .1
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "images/testbutton.png"

            background_normal: ""
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, .4
            font_name: "fonts/Rubik-Bold.ttf"
            text: "Go Back"
            font_size: dp(25)
            size_hint: None, None
            height: dp(70)
            width: dp(170)
            pos: 10, 10
            on_press: root.manager.current = "menu"

<RootBoxLayout>:
    orientation: "horizontal"
    Widget:
        # size_hint: .5, .5
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex("#0d0d0d")
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        size_hint: 1.5 , 1
        orientation: "vertical"
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#000000")
                Rectangle:
                    size: self.size
                    pos: self.pos
            TextInput:

                focus: True
                background_color: 1, 1, 1, .2
                foreground_color: 1, 1, 1
                background_active: "orange.jpg"
                font_name: "fonts/Rubik-Bold.ttf"
                font_size: 25
                size_hint: None, None
                width: dp(200)
                height: self.minimum_height
                multiline: False
                # cursor_width: 10
                cursor_color: 0, 1, 0
                hint_text: "hello"
                hint_text_color: 1, 1, 1, 0.4
                # input_filter: "float"
        AnchorLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#000000")
                Rectangle:
                    size: self.size
                    pos: self.pos
            anchor_x: "center"
            anchor_y: "center"
            size_hint: 1, 1
            Button:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "images/button.png"
                    Color:
                        rgb: utils.get_color_from_hex("#282828")
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                size_hint: None, None
                size: dp(175), dp(80)
                background_color: 1, 1, 1, 0
                background_normal: ""
                background_down: "images/black.png"
                # pos: self.center_x, self.center_y
                font_size: dp(25)
                on_press: root.change_back(self, login_label)
                on_release: root.change_back2(self, login_label)


            Label:
                id: login_label
                font_name: "fonts/Rubik-Bold.ttf"
                text: "Login"
                font_size: dp(25)
                color: utils.get_color_from_hex("#dedddc")

    Widget:
        # size_hint: .5, .5
        # text: "b2"
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex("#0d0d0d")
            Rectangle:
                size: self.size
                pos: self.pos