#:import utils kivy.utils

#Screen1:

<Menu>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Image:
            source: "images/cool4.jpg"
            size_hint: 2, 2

    FloatLayout:
        Button:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .8
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "images/testbutton.png"
            size_hint: .2, .12
            pos: root.center_x - self.width - dp(40), root.height/2 - self.height/2
            background_normal: ""
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, .9
            font_name: "fonts/Rubik-Bold.ttf"
            text: "Time Display"
            font_size: dp(25)
            size_hint: None, None
            height: dp(70)
            width: dp(190)
            on_press: root.manager.current = "displaytime"

        Button:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .8
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "images/testbutton.png"

            size_hint: .2, .12
            pos: root.center_x + dp(40), root.height/2 - self.height/2
            background_normal: ""
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, .9
            font_name: "fonts/Rubik-Bold.ttf"
            text: "Settings"
            font_size: dp(25)
            size_hint: None, None
            height: dp(70)
            width: dp(190)
            on_press: root.manager.current = "settings"


